{
  "name": "tfp-bot",
  "version": "0.0.1",
  "description": "TFP's Custom Discord Bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint",
    "build": "tsc",
    "watch": "nodemon",

    "knex:init": "knex init -x ts",
    "knex:run": "knex --knexfile src/knexfile.ts --esm",

    "migrate:currentVersion": "npm run knex:run -- migrate:currentVersion",
    "migrate:list": "npm run knex:run -- migrate:list",
    "migrate:make": "npm run knex:run -- migrate:make --",
    "migrate:latest": "npm run knex:run -- migrate:latest --debug",
    "migrate:rollback": "npm run knex:run -- migrate:rollback --all --debug",
    
    "seed:make": "npm run knex:run -- seed:make --",
    "seed:run": "npm run knex:run -- seed:run --debug"
  },
  "author": "The Fire Panel, LLC",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.34.0",
    "nodemon": "^3.0.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "fast-xml-parser": "^4.2.5",
    "knex": "^2.5.1",
    "mysql": "^2.18.1",
    "objection": "^3.1.1",
    "ts-node": "^10.9.1"
  }
}
